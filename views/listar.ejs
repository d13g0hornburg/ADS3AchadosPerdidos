<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <!-- Adicione o caminho para seu arquivo CSS -->
    <script src="/script.js"></script>
    <title>Lista de objetos encontrados!</title>
  </head>
  <body>
    <header>
      <a class="a no-print" href="/html/home.html">Home</a>
      <a class="a no-print" href="/html/sobre.html">Sobre </a>
      <a class="a no-print" href="/html/apoio.html">Apoio</a>
    </header>
    <main id="mainListar">
      <div class="table-container">
        <div id="tituloRelatorio">
          <h1 id="relatorio">Relatório de itens</h1>
          <button class="no-print" onclick="window.print()">Imprimir</button>
        </div>
        <table>
          <tr>
            <th>Código</th>
            <th>Descrição</th>
            <th>Ambiente</th>
            <th>Professor</th>
            <th>Curso</th>
            <th>Data</th>
            <th>Hora</th>
            <th>Encontrado por</th>
            <th>Imagem</th>
            <th id="no-printAcao">Ações</th>
          </tr>
          <% objetos.forEach(objeto => { %>
          <tr>
            <td><%= objeto.id %></td>
            <td><%= objeto.descricao %></td>
            <td><%= objeto.ambiente %></td>
            <td><%= objeto.professor %></td>
            <td><%= objeto.curso %></td>
            <td><%= format(new Date(objeto.data), 'yyyy-MM-dd') %></td>
            <td><%= objeto.hora.slice(0, 5) %></td>
            <td><%= objeto.encontrado %></td>
            <td><img src="/uploads/<%= objeto.imagem_objeto %>" style="width:48px;height:48px;"></td>
            <td id="btnAcao no-print">
              <button class="acao no-print" onclick="window.location.href='/editar/<%= objeto.id %>'">Editar</button>
              <button class="acao no-print" onclick="window.location.href='/excluir/<%= objeto.id %>'">Excluir</button>
              <button class="no-print" onclick="window.open('/imprimir/<%= objeto.id %>')">Imprimir Protocolo</button>
            </td>
          </tr>
          <% }) %>
        </table>
      </div>
      <button class="acao no-print" onclick="window.location.href='/html/home.html'">Voltar</button>
    </main>
  </body>
</html>
